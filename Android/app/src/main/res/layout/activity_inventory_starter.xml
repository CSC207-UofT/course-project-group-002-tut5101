<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".inventory_activities.InventoryStarterActivity">

    <Button
            android:text="@string/add_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="AddInventory" tools:ignore="UsingOnClickInXml"
            tools:layout_editor_absoluteX="135dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/button3" android:id="@+id/button2"/>
    <Button
            android:text="@string/check_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            android:onClick="GetInventoryInfo" tools:ignore="UsingOnClickInXml"
            tools:layout_editor_absoluteX="149dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="187dp"/>
    <Button
            android:text="@string/update_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button4"
            android:onClick="UpdateQuantity" tools:ignore="UsingOnClickInXml"
            tools:layout_editor_absoluteX="131dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"/>
    <Button
            android:text="@string/update_freshness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="UpdateFreshness" tools:ignore="UsingOnClickInXml"
            tools:layout_editor_absoluteX="122dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/button4"/>
</androidx.constraintlayout.widget.ConstraintLayout>