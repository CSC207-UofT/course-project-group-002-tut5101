<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".inventory_activities.InventoryStarterActivity">

    <Button
            android:text="@string/add_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="AddInventory" tools:ignore="MissingConstraints,UsingOnClickInXml"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/button3" android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="135dp"
            android:layout_marginEnd="135dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/check_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            android:onClick="GetInventoryInfo" tools:ignore="MissingConstraints,UsingOnClickInXml"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="187dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="149dp" android:layout_marginEnd="150dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/update_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button4"
            android:onClick="UpdateQuantity" tools:ignore="MissingConstraints,UsingOnClickInXml"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="131dp" android:layout_marginEnd="131dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/update_freshness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="UpdateFreshness" tools:ignore="MissingConstraints,UsingOnClickInXml"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/button4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="122dp" android:layout_marginEnd="122dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>