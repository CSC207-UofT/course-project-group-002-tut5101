<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".order_activities.EnterLocationActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/enteredLocation"
            android:layout_marginTop="105dp"
            app:layout_constraintTop_toBottomOf="@+id/askEnterAddressMessage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" android:autofillHints="Enter Table Number or Address"
            android:hint="@string/enter_table_number_or_address"/>
    <TextView
            android:text="@string/please_enter_the_table_number_or_delivery_address_below"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/askEnterAddressMessage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="133dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="105dp"/>
    <Button
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="155dp" android:layout_marginTop="187dp"
            app:layout_constraintTop_toBottomOf="@+id/askEnterAddressMessage"
            android:onClick="next" tools:ignore="OnClick,UsingOnClickInXml"/>
</androidx.constraintlayout.widget.ConstraintLayout>