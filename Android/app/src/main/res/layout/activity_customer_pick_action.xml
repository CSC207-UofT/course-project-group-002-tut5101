<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserActivities.CustomerPickActionActivity">

    <TextView
            android:text="@string/welcome_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/welcome_customer"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="144dp" android:layout_marginStart="144dp" android:layout_marginEnd="139dp"
            android:layout_marginRight="139dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/see_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/selectSeeMenuBtn"
            android:onClick="selectSeeMenu"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/welcome_customer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="160dp" android:layout_marginStart="160dp" tools:ignore="UsingOnClickInXml"/>
    <Button
            android:text="@string/place_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/selectPlaceOrderBtn"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/selectSeeMenuBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="149dp" android:layout_marginStart="149dp"
            android:onClick="selectPlaceOrder" tools:ignore="UsingOnClickInXml"/>
    <Button
            android:text="@string/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/logoutBtn"
            android:layout_marginTop="121dp"
            app:layout_constraintTop_toBottomOf="@+id/selectPlaceOrderBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp" android:layout_marginStart="161dp"
            android:onClick="selectExit" tools:ignore="UsingOnClickInXml"/>

</androidx.constraintlayout.widget.ConstraintLayout>