<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CustomerPickActionActivity">

    <TextView
            android:text="@string/welcome_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/welcome_customer"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="144dp" android:layout_marginStart="144dp" android:layout_marginEnd="139dp"
            android:layout_marginRight="139dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/see_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/selectSeeMenu"
            android:onClick="selectSeeMenu"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/welcome_customer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="162dp" android:layout_marginStart="162dp"/>
    <Button
            android:text="@string/place_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/selectPlaceOrder"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/selectSeeMenu" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="149dp" android:layout_marginStart="149dp"
            android:onClick="selectPlaceOrder"/>

</androidx.constraintlayout.widget.ConstraintLayout>