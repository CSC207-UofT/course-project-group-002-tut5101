<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ManagerPickActionActivity">


    <TextView
            android:text="@string/welcome_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/welcome_manager"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="144dp" android:layout_marginStart="144dp" android:layout_marginEnd="139dp"
            android:layout_marginRight="139dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/manage_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/manageMenuBtn"
            android:onClick="ManageMenu"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/welcome_manager" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp" android:layout_marginStart="136dp"/>
    <Button
            android:text="@string/see_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/seeMenuBtn"
            android:onClick="SeeMenu"
            android:layout_marginTop="148dp"
            app:layout_constraintTop_toBottomOf="@+id/welcome_manager"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="156dp" android:layout_marginStart="156dp"/>
    <Button
            android:text="@string/see_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/seeReviewBtn"
            android:onClick="SeeReview"
            android:layout_marginTop="240dp"
            app:layout_constraintTop_toBottomOf="@+id/welcome_manager" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="148dp" android:layout_marginStart="148dp"/>
    <Button
            android:text="@string/delete_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/deleteReviewBtn"
            android:onClick="DeleteReview"
            android:layout_marginTop="316dp"
            app:layout_constraintTop_toBottomOf="@+id/welcome_manager" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="128dp" android:layout_marginStart="128dp"/>
    <Button
            android:text="@string/add_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addStaffBtn"
            android:onClick="AddStaff"
            android:layout_marginTop="400dp"
            app:layout_constraintTop_toBottomOf="@+id/welcome_manager" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="152dp" android:layout_marginStart="152dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>