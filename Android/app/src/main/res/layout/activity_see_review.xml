<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".review_activities.SeeReviewActivity">

    <TextView
            android:text="@string/review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/reviewTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"/>
    <ScrollView
            android:layout_width="311dp"
            android:layout_height="517dp"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/reviewTitle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/reviewsLayout"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>