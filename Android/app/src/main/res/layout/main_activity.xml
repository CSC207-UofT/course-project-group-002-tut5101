<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="409dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="261dp" android:id="@+id/textInputLayout">

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="272dp"
            android:layout_height="68dp"
            android:hint="hint" tools:layout_editor_absoluteY="95dp" tools:layout_editor_absoluteX="69dp"/>
    <Button
            android:text="I am a customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/customerLogin"
            android:layout_marginTop="287dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="114dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="129dp" android:layout_marginStart="129dp" android:layout_marginEnd="130dp"
            android:layout_marginRight="130dp" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="selectCustomerPickAction"/>
</androidx.constraintlayout.widget.ConstraintLayout>