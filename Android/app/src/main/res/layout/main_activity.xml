<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/i_am_a_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/customerLogin"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="516dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="129dp" android:layout_marginStart="129dp" android:layout_marginEnd="130dp"
            android:layout_marginRight="130dp" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="selectCustomerPickAction" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/staff_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/staffLogin"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/customerLogin" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="146dp" android:layout_marginStart="146dp"
            android:onClick="selectLogin"/>
</androidx.constraintlayout.widget.ConstraintLayout>