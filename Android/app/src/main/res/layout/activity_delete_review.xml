<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".review_activities.DeleteReviewActivity">
    <NumberPicker android:layout_width="160dp" android:layout_height="66dp"
                  app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginTop="284dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="124dp"
                  android:id="@+id/selectAction"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/askDeleteCriteria"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="104dp"/>
    <Button
            android:text="@string/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="155dp" android:layout_marginTop="187dp"
            app:layout_constraintTop_toBottomOf="@+id/selectAction"
            android:onClick="deleteReview" tools:ignore="UsingOnClickInXml"/>

</androidx.constraintlayout.widget.ConstraintLayout>