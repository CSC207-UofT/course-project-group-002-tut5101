<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlaceOrderActivity">
    <NumberPicker android:layout_width="63dp" android:layout_height="87dp"
                  android:id="@+id/dishQuantityPicker" android:layout_marginTop="26dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginLeft="65dp"
                  android:layout_marginStart="65dp" app:layout_constraintStart_toEndOf="@+id/dishNamePicker"/>
    <NumberPicker android:layout_width="147dp" android:layout_height="88dp"
                  android:id="@+id/dishNamePicker" android:layout_marginTop="28dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="65dp" android:layout_marginStart="65dp"/>
    <Button
            android:text="@string/order_dish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/orderDish"
            android:onClick="orderDish" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="149dp"
            android:layout_marginStart="149dp" android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/dishNamePicker" android:layout_marginEnd="150dp"
            android:layout_marginRight="150dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/dish_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="52dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="105dp" android:layout_marginStart="105dp"/>
    <TextView
            android:text="@string/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="54dp" android:layout_marginLeft="98dp" android:layout_marginStart="98dp"
            app:layout_constraintStart_toEndOf="@+id/textView"/>
    <Button
            android:text="@string/place_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/placeOrderBtn"
            android:layout_marginTop="312dp"
            app:layout_constraintTop_toBottomOf="@+id/orderDish" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="144dp" android:layout_marginStart="144dp"
            android:onClick="placeOrder"/>


</androidx.constraintlayout.widget.ConstraintLayout>