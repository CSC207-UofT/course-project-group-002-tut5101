<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliverOrderActivity">

  <com.google.android.gms.maps.MapView
          android:layout_width="358dp"
          android:layout_height="214dp" android:id="@+id/mapView"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="26dp"
          android:layout_marginStart="26dp" android:layout_marginEnd="26dp" android:layout_marginRight="26dp"
          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
          tools:ignore="MissingConstraints" android:layout_marginBottom="100dp"
          app:layout_constraintBottom_toTopOf="@+id/ReturnButton" android:layout_marginTop="20dp"
          app:layout_constraintTop_toBottomOf="@+id/CurrentOrder"/>
  <TextView
          android:text="@string/textview"
          android:layout_width="400dp"
          android:layout_height="150dp" android:id="@+id/CurrentOrder"
          app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
          android:textSize="24sp" android:textStyle="bold"
          android:textAllCaps="false" android:typeface="normal" tools:ignore="MissingConstraints"
          app:layout_constraintBottom_toTopOf="@+id/mapView"
          app:layout_constraintTop_toTopOf="parent"/>
  <Button
          android:text="@string/return_button"
          android:layout_width="200dp"
          android:layout_height="50dp" android:id="@+id/ReturnButton"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0"
          app:backgroundTint="#03A9F4" android:layout_marginEnd="16dp"
          android:onClick="selectReturn" tools:ignore="MissingConstraints,UsingOnClickInXml" android:layout_marginTop="200dp"
          app:layout_constraintTop_toBottomOf="@+id/mapView"/>
  <Button
          android:text="@string/completed_order"
          android:layout_width="200dp"
          android:layout_height="50dp" android:id="@+id/CompleteButton"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/ReturnButton"
          android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
          android:onClick="selectFinishOrder" tools:ignore="MissingConstraints,UsingOnClickInXml" android:layout_marginTop="200dp"
          app:layout_constraintTop_toBottomOf="@+id/mapView"/>
</androidx.constraintlayout.widget.ConstraintLayout>