<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delivery_staff_activities.DeliverOrderActivity">

  <TextView
          android:text="@string/textview"
          android:layout_width="400dp"
          android:layout_height="300dp" android:id="@+id/CurrentOrder"
          app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
          android:textSize="24sp" android:textStyle="bold"
          android:textAllCaps="false" android:typeface="normal" tools:ignore="MissingConstraints"
          app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
          app:layout_constraintHorizontal_bias="0.454"/>
  <Button
          android:text="@string/return_button"
          android:layout_width="200dp"
          android:layout_height="50dp" android:id="@+id/ReturnButton"
          app:backgroundTint="#3F51B5"
          android:onClick="selectReturn" tools:ignore="MissingConstraints,UsingOnClickInXml"
          app:layout_constraintTop_toBottomOf="@+id/CompleteButton"
          android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="105dp" android:layout_marginEnd="106dp"
          app:layout_constraintEnd_toEndOf="parent"/>
  <Button
          android:text="@string/completed_order"
          android:layout_width="200dp"
          android:layout_height="50dp" android:id="@+id/CompleteButton"
          android:onClick="selectFinishOrder" tools:ignore="MissingConstraints,UsingOnClickInXml"
          app:backgroundTint="#3F51B5" android:layout_marginTop="12dp"
          app:layout_constraintTop_toBottomOf="@+id/ShowMap" app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="105dp" android:layout_marginEnd="106dp"
          app:layout_constraintEnd_toEndOf="parent"/>
  <Button
          android:text="@string/show_map"
          android:layout_width="200dp"
          android:layout_height="50dp" android:id="@+id/ShowMap"
          app:backgroundTint="#3F51B5" android:layout_marginTop="100dp"
          app:layout_constraintTop_toBottomOf="@+id/CurrentOrder" android:onClick="selectShowMap"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="105dp"
          android:layout_marginEnd="106dp" app:layout_constraintEnd_toEndOf="parent" tools:ignore="UsingOnClickInXml"/>
</androidx.constraintlayout.widget.ConstraintLayout>