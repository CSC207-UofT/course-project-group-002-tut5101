<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddReviewCommentActivity">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="enter your name"
            android:id="@+id/textInputEdit" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Write complain"
            android:id="@+id/textInputEdit5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="208dp" app:layout_constraintTop_toBottomOf="@+id/textInputEdit1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="if Complain?(Y or N)"
            android:id="@+id/textInputEdit4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="144dp" app:layout_constraintTop_toBottomOf="@+id/textInputEdit1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Write comment"
            android:id="@+id/textInputEdit3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="84dp" app:layout_constraintTop_toBottomOf="@+id/textInputEdit1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bt1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="145dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="145dp" android:layout_marginBottom="144dp"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Rate(integer from 1 to 5)"
            android:id="@+id/textInputEdit2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/textInputEdit1"
            app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="if Anonymous?(Y or N)"
            android:id="@+id/textInputEdit1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="87dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>